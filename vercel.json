{
  "version": 2,
  "installCommand": "npm install", 
  "buildCommand": "npm run build",
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.1",
      "installCommand": "composer install --no-dev --optimize-autoloader" 
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.php"
    }
  ],
  "outputDirectory": "public"
}